@{
    ViewData["Title"] = "Create Edit Page";
}

@model ExpenseManager.MVC.Models.Expense

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="Home">Home</a>
                    </li>
                    <li class="=nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="GetAllExpensesView">Expenses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Welcome to Create/Edit expense page</h1>
        </div>
    </div>

    <form asp-controller="Expense" asp-action="AddUpdateExpenseInDb">
        <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />

        <label class="mt-4">Value Rs</label>
        <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />

        <label class="mt-4">Description</label>
        <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

        <button class="btn btn-primary mt-4" type="submit">Ok</button>
    </form>
</body>